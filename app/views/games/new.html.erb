<div class="m-4">
  <h1>New game</h1>
  <div class="d-flex flex-wrap letter-container">
    <% @letters.each do |letter| %>
      <p class="letter-square"><%= letter %></p>
    <% end %>
  </div>

  <div>
    <p>What is the longest word you can find?</p>
    <form action="/score" data-turbo="false" method="post">
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="answer" value="<%= params[:answer] %>" placeholder="Type here">
      <input type="submit" value="Ask!">
    </form>
  </div>
</div>
